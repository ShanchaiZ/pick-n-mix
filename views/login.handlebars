<div class="row">
    <div class="col-md-6">
        <h2>Login</h2>

        <form class="form login-form mb-2">
            <div class="form-group mb-2">
                <label for="email-login">Email:</label><br>
                <input class="form-input" type="text" id="email-login" />
            </div>
            <div class="form-group mb-2">
                <label for="password-login">Password:</label><br>
                <input class="form-input" type="password" id="password-login" />
            </div>
            <div class="form-group mb-2"><br>
                <button class="btn color-green" type="submit">Login</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Signup</h2>

        <form class="form signup-form">
            <div class="form-group">
                <label for="first-name-signup">First Name:</label><br>
                <input class="form-input" type="text" id="first-name-signup" />
            </div>
            <div class="form-group">
                <label for="last-name-signup">Last Name:</label><br>
                <input class="form-input" type="text" id="last-name-signup" />
            </div>
            <div class="form-group">
                <label for="username-signup">Username:</label><br>
                <input class="form-input" type="text" id="username-signup" />
            </div>
            <div class="form-group">
                <label for="email-signup">Email:</label><br>
                <input class="form-input" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">Password (Minimum 8 characters):</label><br>
                <input class="form-input" type="password" id="password-signup" />
            </div>
            <div class="form-group mb-2"><br>
                <button class="btn color-green" type="submit">Signup</button>
            </div>
        </form>
    </div>
</div>

<!-- failed to sign up modal --> 
<section class="modal fade" id="failed-login" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog text-center" role="document">
        <div class="modal-content bg-light">
            <article class="modal-body">
                <p>Login failed. Your username or password is incorrect.</p>
            </article>
            </form>
            </article>
            <div class="text-center mb-2">
                <button type="button" class="btn btn-danger text-center" data-bs-dismiss="modal"
                    style="width: 20%;">Okay</button>
            </div>
        </div>
    </div>
</section>

<!-- failed to login modal --> 
<section class="modal fade" id="failed-signup" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog text-center" role="document">
        <div class="modal-content bg-light">
            <article class="modal-body">
                <p>Signup failed. Please enter a valid email and make sure your password is at least 8 characters long.</p>
            </article>
            </form>
            </article>
            <div class="text-center mb-2">
                <button type="button" class="btn btn-danger text-center" data-bs-dismiss="modal"
                    style="width: 20%;">Okay</button>
            </div>
        </div>
    </div>
</section>

<script src="./js/login.js"></script>